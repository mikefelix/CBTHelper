<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary"
            android:gravity="center"
            android:textSize="26sp"
            android:paddingBottom="8dp"
            android:background="@drawable/bottom_border"
            tools:ignore="HardcodedText"
            />

        <TextView style="@style/TextViewHeading"
            android:id="@+id/expressedHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/situationType"
            android:text="Sounds like the way you expressed your emotions was not as rational or healthy as it could have been. For example, you noted these errors:"
            tools:ignore="HardcodedText" />

        <TextView style="@style/TextViewDatum"
            android:id="@+id/errors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Overshoulding"
            />

      <!--  <TextView style="@style/TextViewHeading"
            android:id="@+id/doneInstead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/situationType"
            android:text="What could you have done instead?"
            tools:ignore="HardcodedText" />-->

    </LinearLayout>

</ScrollView>